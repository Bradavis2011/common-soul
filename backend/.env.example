# Database
DATABASE_URL="postgresql://user:password@hostname:port/database"

# JWT Secret
JWT_SECRET="your-super-secure-jwt-secret-key"

# Session secret for OAuth
SESSION_SECRET="your-session-secret-here"

# Environment
NODE_ENV="production"

# Frontend URL (for CORS)
FRONTEND_URL="https://common-soul.vercel.app"

# Google OAuth (Get from Google Cloud Console)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Facebook OAuth (Get from Facebook Developer)
FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"

# Stripe Keys
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Cloudinary (for file uploads)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Email Configuration
EMAIL_SERVICE="gmail"  # or "sendgrid", "mailgun", etc.
EMAIL_FROM="noreply@thecommonsoul.com"
EMAIL_USER="your-email@gmail.com"  # For Gmail SMTP
EMAIL_PASS="your-app-password"     # For Gmail: use App Password, not regular password

# Port (Railway will set this automatically)
PORT=3001